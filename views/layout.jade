doctype 5
html
  head
    title Picirus - your cloud data, back down to earth
    block scripts
      link(rel='icon', type='image/png', href='/images/favicon.png')
      link(rel='stylesheet', type='text/css', href='/css/bootstrap.no-icons.min.css')
      link(rel='stylesheet', type='text/css', href='/css/font-awesome.css')
      link(rel='stylesheet', type='text/css', href='/css/app.css')
      script(src='/js/jquery-1.8.2.min.js')
      script(src='/js/bootstrap.js')
      script(src='/js/app.js')
  body
    nav.navbar.navbar-static-top
      .navbar-inner
        .container
          .brand
            img(src='/images/logo20.png')
            a(href='/') Picirus
          ul.nav
            li(class = path == '' && 'active')
              a(href='/') home
            li(class = path == 'accounts' && 'active')
              a(href='/accounts') accounts
          form.navbar-search.pull-right
            input(type='text', class='search-query', placeholder='Search')

    #main
      if err = flash('error')
        .alert.alert-box
          = err
      .container
        block main

